<Window x:Class="ColorAimbot.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Color Aimbot"
        Height="420" Width="326"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <!-- Fundo com partículas -->
        <Canvas x:Name="ParticleCanvas" Background="#14141F" Panel.ZIndex="0"/>

        <!-- Botões de controle (sobre o canvas) -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,10,10,0" Panel.ZIndex="2">
            <Button Content="━" Width="24" Height="24" Click="Minimizar_Click"
                    Background="#444" Foreground="White" FontWeight="Bold"
                    BorderBrush="Transparent" Padding="0" Margin="0,0,5,0"/>
            <Button Content="X" Width="24" Height="24" Click="Fechar_Click"
                    Background="#E53935" Foreground="White" FontWeight="Bold"
                    BorderBrush="Transparent" Padding="0"/>
        </StackPanel>

        <!-- Painel central (sobre partículas, abaixo dos botões) -->
        <Border Background="#1F1F2A" CornerRadius="15" Margin="20,50,20,20" Panel.ZIndex="1">
            <StackPanel Margin="20">
                <TextBlock FontSize="20" FontWeight="Bold" Foreground="#B388FF" HorizontalAlignment="Center" Margin="0,0,0,20"><Run Language="pt-br" Text="Vênus Assist"/></TextBlock>

                <TextBlock Text="Color (Hex):" Foreground="White"/>
                <TextBox Name="ColorBox" Text="#C9008D" Margin="0,5,0,10" BorderBrush="#7C4DFF" BorderThickness="2" Padding="10" FontSize="14" Background="#2D2D3A" Foreground="White"/>

                <TextBlock Text="FOV" Foreground="White"/>
                <TextBox Name="FovBox" Text="120" Margin="0,5,0,10" BorderBrush="#7C4DFF" BorderThickness="2" Padding="10" FontSize="14" Background="#2D2D3A" Foreground="White"/>

                <CheckBox Name="SmoothCheck" Content="Smooth" IsChecked="True" Foreground="White" Margin="0,0,0,5"/>
                <CheckBox x:Name="PredictionCheck" Content="Predict" IsChecked="True" Foreground="White"/>

                <TextBlock Name="LogText" Text="" TextWrapping="Wrap" Foreground="LightGreen"/>
                <Button Content="Start Aim"
                        Height="40"
                        Click="StartAimbot_Click"
                        Background="#7C4DFF"
                        Foreground="White"
                        FontWeight="Bold"
                        BorderBrush="Transparent"
                        Padding="10"
                        Cursor="Hand"
                        Width="212">
                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="10"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</Window>
